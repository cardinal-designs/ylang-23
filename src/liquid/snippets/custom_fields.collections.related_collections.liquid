{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/ylang2-3.myshopify.com/collections/configure/221935/edit
{% endcomment %}
{% if collection.metafields.custom_fields["related_collections"] != blank %}
  <div class="custom-field custom-field__related-collections custom-field__type--field-collection">
    <h3 class="custom-field--title">Related Collections</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign link_url_array = collection.metafields.custom_fields["link_url"] | split: separator %}
      {% assign link_text_array = collection.metafields.custom_fields["link_text"] | split: separator %}
      {% assign fc_keys = collection.metafields.custom_fields["related_collections"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__link-url">
            {{ link_url_array[index] }}
          </div>
          <div class="fc-field field__link-text">
            {{ link_text_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}