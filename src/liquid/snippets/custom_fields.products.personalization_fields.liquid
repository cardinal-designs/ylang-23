{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/ylang2-3.myshopify.com/products/configure/221940/edit
{% endcomment %}
{% if product.metafields.custom_fields["personalization_fields"] != blank %}
  <div class="custom-field custom-field__personalization-fields custom-field__type--field-collection">
    <h3 class="custom-field--title">Personalization Fields</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign personalization_label_array = product.metafields.custom_fields["personalization_label"] | split: separator %}
      {% assign personalization_type_array = product.metafields.custom_fields["personalization_type"] | split: separator %}
      {% assign special_order_product_terms_array = product.metafields.custom_fields["special_order_product_terms"] | split: separator %}
      {% assign personalization_max_length_array = product.metafields.custom_fields["personalization_max_length"] | split: separator %}
      {% assign personalization_placeholder_array = product.metafields.custom_fields["personalization_placeholder"] | split: separator %}
      {% assign personalization_options_array = product.metafields.custom_fields["personalization_options"] | split: separator %}
      {% assign personalization_help_text_array = product.metafields.custom_fields["personalization_help_text"] | split: separator %}
      {% assign personalization_required_array = product.metafields.custom_fields["personalization_required"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["personalization_fields"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item--personalization field fc-index--{{ index }}">
          <div class="fc-field field__personalization-label">
            {{ personalization_label_array[index] }}
          </div>
          <div class="fc-field field__personalization-type">
            {{ personalization_type_array[index] }}
          </div>
          <div class="fc-field field__special-order-product-terms">
            {{ special_order_product_terms_array[index] }}
          </div>
          <div class="fc-field field__personalization-max-length">
            {{ personalization_max_length_array[index] }}
          </div>
          <div class="fc-field field__personalization-placeholder">
            {{ personalization_placeholder_array[index] }}
          </div>
          <div class="fc-field field__personalization-options">
            {{ personalization_options_array[index] }}
          </div>
          <div class="fc-field field__personalization-help-text">
            {{ personalization_help_text_array[index] }}
          </div>
          <div class="fc-field field__personalization-required">
            {{ personalization_required_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}