
<ul class="pagination u-list-inline">
  <li class="pagination__item pagination__item--prev">
    <a
      href="{{ paginate.previous.url }}" 
      label="Previous Page" 
      {% unless paginate.previous %}:disabled="true"{% endunless %}>
      <icon name="arrow-left" size="18px"></icon>
    </a>
  </li>

  {%- for part in paginate.parts -%}
    <li class="pagination__item">
      {%- if part.is_link -%}
        <a href="{{ part.url }}" class="pagination__link">
          <span class="u-sr-only">page</span> {{ part.title }}
        </a>
      {%- else -%}
        <span class="pagination__link {% if part.title == paginate.current_page %}pagination__link--active{% endif %}">
          <span class="u-sr-only">page</span> {{ part.title }}
        </span>
      {%- endif -%}
    </li>
  {%- endfor -%}

  <li class="pagination__item pagination__item--next">
    <a
      href="{{ paginate.next.url }}" 
      label="Next Page" 
      {% unless paginate.next %}:disabled="true"{% endunless %}>
      <icon name="arrow-right" size="18px"></icon>
    </a>
  </li>
</ul>
