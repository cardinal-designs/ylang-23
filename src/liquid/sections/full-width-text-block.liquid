{% if section.settings.copy != blank %}
  <div class="full-width-text-block">
    <div class="full-width-text-block__copy">
      <div class="body-md client-generated">{{ section.settings.copy }}</div>
    </div>
  </div>
{% endif %}

{% assign sectionId = section.id | prepend:'#shopify-section-' %}
{% if section.settings.custom_section_CSS != blank %}
  <custom-style style="display:none;">
      {{ section.settings.custom_section_CSS | replace:'[section]',sectionId }}
  </custom-style>
{% endif %}

{% schema %}
  {
    "name": "Full Width Text Block",
    "settings": [
      {
        "type": "richtext",
        "id": "copy",
        "label": "Text to display"
      },
      {
        "type":"html",
        "id":"custom_section_CSS",
        "label":"Custom Section CSS"
      }
    ],
    "presets": [
      {
        "name": "Full Width Text Block"
      }
    ]
  }
{% endschema %}
