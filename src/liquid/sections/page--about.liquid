          {% when 'scrolling_text' %}
            "settings": {
              "title": {{ block.settings.title | json }},
              "content": {{ block.settings.content | json }},
              "image": {{ block.settings.image | img_url: '735x' | strip | json }},
              "imageMobile": {{ block.settings.image | img_url: '500x' | strip | json }},
              "imageAlt": {{ block.settings.image.alt | strip | json }},
              "group": {{ block.settings.text_group | handleize | strip | json }}
            }
          {%- endcase -%}
      }{%- unless forloop.last -%},{%- endunless -%}
    {%- endfor -%}
  ]
{%- endcapture -%}

