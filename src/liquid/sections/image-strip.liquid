{% capture schema %}
  {
  "settings": {
                  "paddingTop": {{ section.settings.padding_top | json }},
  "paddingBottom": {{ section.settings.padding_bottom | json }},
  "paddingLeft": {{ section.settings.padding_left | json }},
  "paddingRight": {{ section.settings.padding_right | json }},
  "columnGap": {{ section.settings.column_gap | json }},
  "rowGap": {{ section.settings.row_gap | json }}
  },
  "blocks": [
  {% for block in section.blocks %}
    {
    "id": {{ block.id | json }},
    "type": {{ block.type | json }},
    "settings": {{ block.settings | json }},
    "itp_logo_alt": {{ block.settings.itp_logo.alt | json }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  ]
  }
{% endcapture %}

<image-strip :schema="{{ schema | escape | strip }}" />

{% schema %}
  {
    "name": "Image Strip",
    "max_blocks": 5,
    "settings": [
      {
        "type": "header",
        "content": "Section Margins",
        "info": "Customize the margin spacing on the top and bottom of this section."
      },
      {
        "label": "Top Padding",
        "id": "padding_top",
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 56,
        "info": "Default is `56`"
      },
      {
        "label": "Bottom Padding",
        "id": "padding_bottom",
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 56,
        "info": "Default is `56`"
      },
      {
        "label": "Left Padding",
        "id": "padding_left",
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 0,
        "info": "Default is `0`"
      }, {
        "label": "Right Padding",
        "id": "padding_right",
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 0,
        "info": "Default is `0`"
      }, {
        "label": "Gap between Column",
        "id": "column_gap",
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 8,
        "info": "Default is `8`"
      }, {
        "label": "Gap between Row",
        "id": "row_gap",
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 8,
        "info": "Default is `8`"
      }
    ],
    "blocks": [
      {
        "name": "Image",
        "type": "testimonial_block",
        "settings": [
          {
            "type": "header",
            "content": "Images",
            "info": "Add a minimum of 2 images"
          },
          {
            "label": "Logo Image",
            "type": "image_picker",
            "id": "itp_logo",
            "info": "Recommended size: 1818x1741 Tall"
          },
          {
            "label": "Link",
            "type": "url",
            "id": "itp_url"
          },
          {
            "label": "Link Target",
            "type": "select",
            "id": "itp_link_target",
            "default": "_self",
            "options": [
              {
                "label": "Current Tab",
                "value": "_self"
              }, {
                "label": "New Tab",
                "value": "_blank"
              }
            ]
          }, {
            "type": "text",
            "id": "link_aria_label",
            "label": "Aria Label Description",
            "info": "Input a description for screen readers, explaining where the image block links to if the text box isn't enabled. For example, 'Link to Cathy Waterman collection'"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Strip",
        "category": "Content Blocks"
      }
    ]
  }
{% endschema %}