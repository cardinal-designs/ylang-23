      },
      {
        "type": "checkbox",
        "id": "enableOverlay",
        "label": "Enable Image Overlay"
      },
      {
        "type": "select",
        "id": "imageOverlayColor",
        "label": "Image Overlay Color",
        "options": [
          {
            "label": "Dark",
            "value": "dark"
          },
          {
            "label": "Light",
            "value": "light"
          }
        ],
        "default": "light"
      },
      {
        "type": "range",
        "id": "overlayOpacity",
        "step": 1,
        "min": 0,
        "max": 100,
        "default": 0,
        "label": "Overlay Opacity"
      }
    ],
    "presets": [
      {
        "name": "Product Set",
        "category": "Products"
      }
    ]
  }
{% endschema %}
