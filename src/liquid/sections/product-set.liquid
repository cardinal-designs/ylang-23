      },
      {
        "type": "range",
        "label": "Top Padding",
        "id": "topPadding",
        "step": 4,
        "min": 0,
        "max": 100,
        "default": 56,
        "unit": "px"
      },
      {
        "type": "range",
        "label": "Bottom Padding",
        "id": "bottomPadding",
        "step": 4,
        "min": 0,
        "max": 100,
        "default": 56,
        "unit": "px"
      },
      {
        "type": "header",
        "content": "Section Info"
      },
      {
        "type": "text",
        "id": "sectionTitle",
        "label": "Section Title"
      },
      {
        "type": "select",
        "id": "sectionTitleColor",
        "label": "Section Title Color",
